using Gtk 4.0;
using Pango 1.0;

template $InfoRow: Box {
    orientation: horizontal;
    hexpand: true;

    Label {
        label: bind template.name;
        halign: start;
        hexpand: true;
    }

    Label value_label {
        label: bind template.value;
        halign: end;
        selectable: bind template.selectable;
        use-markup: true;
    }
}
