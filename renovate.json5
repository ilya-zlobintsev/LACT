{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:all"
  ],
  // make sure automerge is disabled, even when base configs changes
  "automerge": false,
  "dependencyDashboard": false,
  "lockFileMaintenance": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^rust-toolchain\\.toml$"
      ],
      "matchStrings": [
        "channel\\s*=\\s*\"(?<currentValue>[^\"\\s]+)\""
      ],
      "depNameTemplate": "rust",
      "datasourceTemplate": "rust"
    }
  ],
  "ignorePaths": [
    "pkg/images/**"
  ],
}
